<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.android.tv"
          xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />
    <uses-feature
        android:name="android.software.leanback"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Leanback">
        <activity
            android:name=".SplashActivity"
            android:screenOrientation="landscape"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity"
            android:screenOrientation="landscape"
            />
        <activity
            android:name=".TripActivity"
            android:screenOrientation="landscape"
            />
        <activity
            android:name=".GrideStyleActivity"
            android:screenOrientation="landscape"
            />
        <activity
            android:name=".GrideStyleOne"
            android:screenOrientation="landscape"
            />
        <activity
            android:name=".GrideStyleTwo"
            android:screenOrientation="landscape"
            />
        <activity
            android:name=".LinearLayoutActivity"
            android:screenOrientation="landscape"
            />
        <activity android:name=".leanback.LeanBackMainActivity"
                  android:screenOrientation="landscape"
            />

        <activity android:name=".leanback.DetailsActivity"
                  android:screenOrientation="landscape">
        </activity>
        <activity android:name=".leanback.BrowseErrorActivity"
                  android:screenOrientation="landscape"/>
    </application>

</manifest>