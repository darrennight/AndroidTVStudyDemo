<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <TextView
        android:id="@+id/tv_trip"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="#3764ab"
        android:text="游记"
        android:textSize="28sp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:focusable="true"/>



        <TextView
            android:id="@+id/tv_hunter"
            android:layout_width="420dp"
            android:layout_height="200dp"
            android:background="#42a809"
            android:text="面包猎人"
            android:layout_toRightOf="@+id/tv_trip"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textSize="28sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:focusable="true"/>


        <TextView
            android:id="@+id/tv_found"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="#d34f31"
            android:layout_toRightOf="@+id/tv_hunter"
            android:text="发现"
            android:textSize="28sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:focusable="true"/>


        <TextView
            android:id="@+id/tv_girde"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="#9346CA"
            android:layout_below="@+id/tv_trip"
            android:text="面包定制"
            android:textSize="28sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:focusable="true"/>


        <TextView
            android:id="@+id/tv_me"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="#2b2b2b"
            android:layout_below="@+id/tv_trip"
            android:layout_toRightOf="@+id/tv_girde"
            android:text="我的"
            android:textSize="28sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:focusable="true"/>


        <TextView
            android:id="@+id/tv_setting"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="#ac1b38"
            android:layout_below="@+id/tv_trip"
            android:layout_toRightOf="@+id/tv_me"
            android:text="setting"
            android:textSize="28sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:focusable="true"/>


    </RelativeLayout>

</RelativeLayout>
